@model ABCRetailByRH.Models.Order
@{
	ViewData["Title"] = "Delete Order";
}
<h2>Delete Order</h2>
<p>Are you sure you want to delete this order?</p>
<dl class="row">
	<dt class="col-sm-2">Order</dt>
	<dd class="col-sm-10">@Model.OrderId</dd>
	<dt class="col-sm-2">User</dt>
	<dd class="col-sm-10">@Model.Username</dd>
</dl>
<form asp-action="Delete" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" name="rowKey" value="@Model.RowKey" />
	<button class="btn btn-danger" type="submit">Delete</button>
	<a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
