@model Order

@{
    ViewData["Title"] = "Edit Order";
}

<h2>Edit Order</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <!-- Preserve contract info so it isn't lost on submit -->
    <input type="hidden" asp-for="ContractFileName" />
    <input type="hidden" asp-for="ContractOriginalFileName" />
    <input type="hidden" asp-for="ContractContentType" />

    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" asp-items="ViewBag.CustomerList" class="form-control"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ProductId">Product</label>
        <select asp-for="ProductId" asp-items="ViewBag.ProductList" class="form-control"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    @* Display info about existing contract (if any) *@
    @if (!string.IsNullOrEmpty(Model.ContractFileName))
    {
        <div class="form-group">
            <label>Contract on file:</label>
            <p>@Model.ContractOriginalFileName (<a asp-action="DownloadContract" asp-route-id="@Model.Id">Download</a>)</p>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
