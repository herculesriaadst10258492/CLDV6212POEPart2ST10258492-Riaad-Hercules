@model List<string>
@using Microsoft.AspNetCore.Html
@{
    ViewData["Title"] = "Upload Contracts";
}
<div class="container my-5">
    <div class="card card-dark p-0">
        @await Html.PartialAsync("_SectionHeader",
        ("Upload Contracts", "Files stored in Azure File Share", (IHtmlContent?)null))

        <div class="p-4">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <form asp-action="Index" method="post" enctype="multipart/form-data" class="mb-3">
                @Html.AntiForgeryToken()
                <input type="file" name="file" class="form-control input-dark" required />
                <button class="btn btn-gold mt-2" type="submit">Upload</button>
            </form>

            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead><tr><th>File Name</th><th class="text-end">Actions</th></tr></thead>
                    <tbody>
                        @foreach (var f in Model)
                        {
                            <tr>
                                <td>@f</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-light" asp-action="Details" asp-route-name="@f">Details</a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Download" asp-route-name="@f">Download</a>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="name" value="@f" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
