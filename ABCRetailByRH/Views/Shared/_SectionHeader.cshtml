@model (string Title, string? Subtitle, Microsoft.AspNetCore.Html.IHtmlContent? Right)

<div class="card-header px-4 py-3 d-flex align-items-center justify-content-between">
    <div>
        <h2 class="m-0 fw-bold">@Model.Title</h2>
        @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
        {
            <div class="subtitle-muted">@Model.Subtitle</div>
        }
    </div>
    <div class="d-flex align-items-center gap-2">
        @if (Model.Right != null)
        {
            @Model.Right
        }
    </div>
</div>
<hr class="hr-glow" />
