@model ABCRetailByRH.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container my-5" style="max-width: 720px;">
    <div class="card p-4">
        <h2 class="h4 text-uppercase mb-3">Edit Product</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="@Model.RowKey" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" type="number" step="1" min="0" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Product Image</label>
                @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.ImageUrl" alt="Current Image" style="height:140px;border-radius:8px" />
                    </div>
                }
                <input class="form-control" type="file" name="newImageFile" accept="image/*" />
                <div class="form-text">Leave blank to keep the existing image.</div>
            </div>

            <button class="btn btn-gold">Save</button>
            <a class="btn btn-link" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
